{% extends 'base.html.j2' %}

{% block menu %}
  <li class="uk-parent"><a href="{{ url_for('hubs.hubs_index_html') }}">Hubs</a></li>
  <li class="uk-parent"><a href="{{ url_for('datasets.datasets_index_html', hub_id=hub_id) }}">Datasets</a></li>
{% endblock %}

{% block header %}
  New Dataset
{% endblock %}

{% block content %}
  <form class="uk-form-stacked" action="{{ url_for('datasets.dataset_new_html', hub_id=hub_id) }}" method="post">
    <fieldset class="uk-fieldset">
      <div class="uk-margin">
        <label class="uk-form-label" for="name">Name</label>
        <input id="name" class="uk-input" name="name" type="text" placeholder="Dataset Name">
      </div>

      <div class="uk-margin">
        <button type="submit" class="uk-button uk-button-primary">Add Dataset</button>
      </div>
    </fieldset>
  </form>
{% endblock %}
