{% extends 'base.html.j2' %}

{% block nav %}
  <li><a href="{{ url_for('teams.index_html') }}">Teams</a></li>
{% endblock %}

{% block content %}
  <form class="uk-container-small uk-form-horizontal" action="{{ url_for('teams.new_html') }}" method="post">
    {% if error %}
      <div class="uk-alert-danger" uk-alert>
        <span>{{ error }}</span>
        <a class="uk-alert-close" uk-close></a>
      </div>
    {% endif %}
    <fieldset class="uk-fieldset">
      <div class="uk-margin">
        <label class="uk-form-label" for="name">Name</label>
        <div class="uk-form-controls">
          <input id="name" class="uk-input" name="name" type="text" placeholder="Team Name" required>
        </div>
      </div>

      <div class="uk-margin uk-form-controls">
        <button type="submit" class="uk-button uk-button-primary">Add Team</button>
      </div>
    </fieldset>
  </form>
{% endblock %}
