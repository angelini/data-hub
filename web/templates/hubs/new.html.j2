{% extends 'base.html.j2' %}

{% block menu %}{% endblock %}

{% block header %}
  <h1>New Hub</h1>
{% endblock %}

{% block content %}
  <form action="{{ url_for('hubs.hub_new_html') }}" method="post" class="pure-form pure-form-aligned">
    <fieldset>
      <div class="pure-control-group">
        <label for="name">Name</label>
        <input id="name" name="name" type="text" placeholder="Hub Name">
      </div>

      <div class="pure-control-group">
        <label for="hive-host">Hive Host</label>
        <input id="hive-host" name="hive_host" type="text" placeholder="hive://local">
      </div>

      <div class="pure-controls">
        <button type="submit" class="pure-button pure-button-primary">Add Hub</button>
      </div>
    </fieldset>
  </form>
{% endblock %}
